<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="text" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:layout_margin">10dp</item>
    </style>
    <style name="text_manhinhchucnang" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColorHint">#ffffff</item>
    </style>
    <style name="checkbox" parent="TextAppearance.AppCompat.Medium">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="button" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/background</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">20dp</item>
    </style>
</resources>
