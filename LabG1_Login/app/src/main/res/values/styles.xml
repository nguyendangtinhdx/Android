<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="btn" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/border_button</item>
        <item name="android:textColor">#39b5e2</item>
        <item name="android:layout_margin">@dimen/dim_element</item>
    </style>
    <style name="txt" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:layout_margin">@dimen/dim_element</item>
    </style>

</resources>
