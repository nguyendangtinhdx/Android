<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:background="#3d96c2">
    <LinearLayout
        android:layout_marginRight="5dp"
        android:id="@+id/wrap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:background="#fff"
            android:src="@drawable/teacher"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imdGiaoVien" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgDanhSachSinhVien"
        android:src="@drawable/arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
    <TextView
        android:textColor="@color/colorText"
        android:text="Nguyễn Đăng Tỉnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTen"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/wrap"/>
    <TextView
        android:textColor="@color/colorText"
        android:text="K38D"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtTenLop"
        android:layout_below="@+id/txtTen"
        android:layout_toRightOf="@+id/wrap" />
    <TextView
        android:id="@+id/txtSiSo"
        android:textStyle="italic|bold"
        android:text="Sĩ số : 40 sinh viên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/wrap"
        android:layout_toRightOf="@+id/wrap"
        android:layout_toEndOf="@+id/wrap" />

</RelativeLayout>
