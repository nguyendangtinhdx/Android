<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.nguyendangtinh.pheptoan.MainActivity"
    tools:showIn="@layout/activity_main">

    <TableLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">
    <EditText
        android:id="@+id/editTextSo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/editTextSo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteY="92dp"
        tools:layout_editor_absoluteX="69dp" />


    <Button
        android:id="@+id/btnCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cộng"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="213dp" />

    <Button
        android:id="@+id/btnTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trừ"
        tools:layout_editor_absoluteX="104dp"
        tools:layout_editor_absoluteY="213dp" />

    <Button
        android:id="@+id/btnNhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhân"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="213dp" />

    <Button
        android:id="@+id/btnChia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chia"
        tools:layout_editor_absoluteX="280dp"
        tools:layout_editor_absoluteY="213dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kết quả:"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="324dp" />

    <TextView
        android:id="@+id/textViewKetQua"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Kết quả"
        android:textSize="40dp"
        android:textColor="@color/result"
        android:layout_margin="20dp"
        tools:layout_editor_absoluteX="69dp"
        tools:layout_editor_absoluteY="285dp" />


    </TableLayout>




</android.support.constraint.ConstraintLayout>
