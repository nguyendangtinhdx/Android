<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.nguyendangtinh.maytinh.MainActivity">

    <RelativeLayout
        android:background="@color/dark"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <EditText
            android:textSize="25dp"
            android:id="@+id/edt_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập số"
            android:inputType="text"
            />
        <TextView
            android:textSize="30dp"
            android:textStyle="bold"
            android:id="@+id/tv_result"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/edt_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#000"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btnNumber1"
                android:text="1"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnNumber2"
                android:text="2"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnNumber3"
                android:text="3"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnCong"
                android:text="+"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnClear"
                android:text="C"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
        </LinearLayout>
        <LinearLayout
            android:weightSum="5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <Button
                android:id="@+id/btnNumber4"
                android:text="4"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnNumber5"
                android:text="5"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnNumber6"
                android:text="6"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnTru"
                android:text="-"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
            <Button
                android:id="@+id/btnClearAll"
                android:text="AC"
                android:textSize="30dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:weightSum="10"
        android:background="#000"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="180dp">
        <LinearLayout
            android:layout_weight="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp">
            <LinearLayout
                android:weightSum="4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">
                <Button
                    android:id="@+id/btnNumber7"
                    android:text="7"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <Button
                    android:id="@+id/btnNumber8"
                    android:text="8"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <Button
                    android:id="@+id/btnNumber9"
                    android:text="9"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <Button
                    android:id="@+id/btnNhan"
                    android:text="*"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />

            </LinearLayout>

            <LinearLayout
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <Button
                    android:id="@+id/btnNumber0"
                    android:text="0"
                    android:textSize="30dp"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp" />
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="90dp">
                    <Button
                        android:id="@+id/btnPoint"
                        android:text="."
                        android:textSize="30dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp" />
                    <Button
                        android:id="@+id/btnChia"
                        android:text="/"
                        android:textSize="30dp"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="90dp" />
                    </LinearLayout>
            </LinearLayout>
        </LinearLayout> 
        <Button
            android:id="@+id/btnResult"
            android:text="="
            android:textSize="80dp"
            android:layout_weight="8"
            android:layout_width="match_parent"
            android:layout_height="180dp" />
    </LinearLayout>
    
</LinearLayout>
